{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES5",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
